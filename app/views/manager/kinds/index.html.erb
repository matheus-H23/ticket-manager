
  <div class="tickets-box-title">
    <h3>All Kinds
      <span class="float-right">
        <%= link_to 'New Kind', new_manager_kind_path, class: "btn btn-primary" %>
      </span>
    </h3>
  </div>
  <div class="tickets-box-table">
    <table class="table table-striped table-bordered first">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.title %></td>
            <td>
              <%= kind.description %>
            </td>
            <% unless kind.id == 1 %>
              <td><%= link_to 'Edit', edit_manager_kind_path(kind) %></td>
              <td><%= link_to 'Delete', manager_kind_path(kind), method: :delete, data: { confirm: "Are you sure you want to delete this kind?\n\nAll tickets that have that kind will be uncategorized." } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="tickets-box-footer">
    <div class="col-md-7 offset-md-5">
      <%= paginate @kinds, window: 2 %>
    </div>
  </div>
