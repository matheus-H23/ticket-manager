
  <div class="tickets-box-title">
    <h3>All Users
      <span class="float-right">
        <%= link_to 'New User', new_manager_user_path, class: "btn btn-primary" %>
      </span>
    </h3>
  </div>
  <div class="tickets-box-table">
    <table class="table table-striped table-bordered first">
      <thead>
        <tr>
          <th>Name</th>
          <th>E-mail</th>
          <th>Group</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.group.name %>
            </td>
            <% unless user.id == 1 %>
              <td><%= link_to 'Edit', edit_manager_user_path(user) %></td>
              <td><%= link_to 'Delete', manager_user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?\n\nAll tickets from that user will be deleted." } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="tickets-box-footer">
    <div class="col-md-7 offset-md-5">
      <%= paginate @users, window: 2 %>
    </div>
  </div>
