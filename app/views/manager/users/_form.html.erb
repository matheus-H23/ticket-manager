<%= form_with(model: ([:manager, @user]), local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, for: "inputName", class: "col-form-label" %>
    <%= form.text_field :name, id: "inputName", type: "text", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, for: "inputDescription", class: "col-form-label" %>
    <%= form.text_field :email, id: "inputDescription", type: "text", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :group, for: "inputGroup", class: "col-form-label" %>
    <%= form.collection_select(:group_id, @groups_options_for_select, :id, :name,{} ,{id: "inputGroup", class: "form-control"}) %>
  </div>

  <div class="actions form-group text-center mt-5">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
