<div class="cointainer col-md-24">
  <div class="row col-md-22">
    <div class="tickets-box col-md-12">
      <div class="tickets-box-title">
        <h3>Recently Tickets
        <span class="float-right"> <%= link_to 'Open Ticket', new_account_ticket_path, class: "btn btn-primary" %> </span></h3>
      </div>
      <div class="tickets-box-table">
        <table class="table table-striped table-bordered first">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Description</th>
              <th>Assignee</th>
              <th>Registered at</th>
              <th>Last updated</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @tickets_recently.each do |ticket| %>
              <tr>
                <td><%= ticket.id %></td>
                <td><%= truncate(ticket.title, length: 28) %></td>
                <% if ticket.description.present? %>
                  <td><%= truncate(ticket.description, length: 50) %></td>
                <% else %>
                  <td><%= '...' %></td>
                <% end %>
                <% if ticket.assignee.present? %>
                  <td><%= truncate(ticket.assignee.name, length: 15) %></td>
                <% else %>
                  <td class="text-center"><%= 'Not yet Assigned' %></td>
                <% end %>
                <td class="text-center"><%= ticket.created_at.strftime("%d/%m/%y at %H:%M") %></td>
                <td><%= ticket.updated_at.strftime("%d/%m/%y at %H:%M")%></td>
                <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                <td><%= link_to 'Cancel', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tickets-box-footer">
        <div class="col-md-7 offset-md-5">
          <%= paginate @tickets_recently, window: 2, param_name: :recently %>
        </div>
      </div>
    </div>
  </div>
  <div class="row col-md-22">
    <div class="tickets-box col-md-12">
      <div class="tickets-box-title">
        <h3>All Tickets</h3>
      </div>
      <div class="tickets-box-table">
        <table class="table table-striped table-bordered first">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Description</th>
              <th>Assignee</th>
              <th>Registered at</th>
              <th>Last updated</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @tickets.each do |ticket| %>
              <tr>
                <td><%= ticket.id %></td>
                <td><%= truncate(ticket.title, length: 28) %></td>
                <% if ticket.description.present? %>
                  <td><%= truncate(ticket.description, length: 50) %></td>
                <% else %>
                  <td><%= '...' %></td>
                <% end %>
                <% if ticket.assignee.present? %>
                  <td><%= truncate(ticket.assignee.name, length: 15) %></td>
                <% else %>
                  <td><%= 'Not yet Assigned' %></td>
                <% end %>
                <td><%= ticket.created_at.strftime("%d/%m/%y at %H:%M") %></td>
                <td><%= ticket.updated_at.strftime("%d/%m/%y at %H:%M")%></td>
                <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                <td><%= link_to 'Cancel', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tickets-box-footer">
        <div class="col-md-7 offset-md-5">
          <%= paginate @tickets, window: 2 %>
        </div>
      </div>
    </div>
  </div>
</div>
